@page
@using Microsoft.AspNetCore.Identity
@using Domain.Users
@attribute [IgnoreAntiforgeryToken]
@inject IUserService UserService
@functions {
    public async Task<IActionResult> OnPost()
    {
        if (UserService.IsLoggedIn())
        {
            await UserService.LogOut();
        }

        return Redirect("~/");
    }
}
