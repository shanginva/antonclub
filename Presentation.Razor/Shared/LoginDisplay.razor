@using Domain.Users
@inject IUserService userService

<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Привет, @userService.CurrentUser?.Name</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="nav-link btn btn-link">Выход</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Регистрация</a>
        <a href="Identity/Account/Login">Вход</a>
    </NotAuthorized>
</AuthorizeView>
